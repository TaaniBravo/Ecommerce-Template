{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "server",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": false,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types/"]
  },
  "include": ["./server/", "tsconfig.json"],
  "exclude": ["./node_modules/", "./dist/", "./*.spec.ts"],
  "types": ["node", "mocha", "chai"]
}
